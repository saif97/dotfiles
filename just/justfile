import? "~/.config/work.justfile"

tartImage :="tahoe-xcode"
# tartImage :="macos-26"

default:
    just --justfile {{justfile()}} --list

hello:
    echo "Hello from global justfile!"

sync-ai-markedown-files:
    @./sync_ai_md.sh

tart-up:
    tart run --suspendable --dir=shared_dir:~/dev {{tartImage}} &
tart-stop:
    tart stop {{tartImage}}
tart-get-config:
    tart get {{tartImage}}
tart-ssh:
    ssh admin@$(tart ip {{tartImage}})
tart-share-workspace:
    ln -s "{{invocation_directory()}}" ~/dev/vms/shared_dir/vm_workspace

uninstall-apps:
    @{{justfile_directory()}}/scripts/uninstall_apps.sh

# terminal
devcontainer-build:
    devcontainer build --workspace-folder .

# terminal
devcontainer-up:
    devcontainer up --workspace-folder .

# terminal
devcontainer-exec:
    devcontainer exec --workspace-folder . zsh


